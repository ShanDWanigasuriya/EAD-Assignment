@using Newtonsoft.Json.Linq
@{
    ViewData["Title"] = "Bookings";
}

<div class="card">
    <div class="card-header bg-dark text-white fw-bold">
        Booking Management
    </div>

    <div class="card-body">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        <!-- 🟩 CREATE NEW BOOKING -->
        <h5 class="mb-3">Create New Booking</h5>
        <form asp-action="Create" method="post" class="row g-3 mb-4">
            <div class="col-md-4">
                <label class="form-label fw-bold">Station</label>
                <select class="form-select" name="station" required>
                    <option value="">-- Select Station --</option>
                    @foreach (var s in ViewBag.Stations)
                    {
                        <option value="@s["id"]">@s["name"]</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Owner NIC</label>
                <input type="text" name="ownerNic" class="form-control" placeholder="Enter NIC" required />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">Date</label>
                <input type="date" name="date" class="form-control" required />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">Time</label>
                <input type="time" name="time" class="form-control" required />
            </div>

            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Submit Booking</button>
            </div>
        </form>

        <hr />

        <!-- 🟦 EXISTING BOOKINGS -->
        <h5 class="mb-3">Existing Bookings</h5>
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Station</th>
                    <th>Owner NIC</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No bookings found.</td>
                    </tr>
                }
                else
                {
                    @foreach (JObject booking in (JArray)Model)
                    {
                        DateTime startUtc = DateTime.Parse(booking["reservationStartUtc"]?.ToString() ?? DateTime.MinValue.ToString());
                        var bookingDateTime = startUtc.ToLocalTime();
                        bool canModify = (bookingDateTime - DateTime.Now).TotalHours >= 12;
                        string status = booking["status"]?.ToString() ?? "Pending";

                        <tr>
                            <td>@booking["id"]</td>
                            <td>@booking["stationName"]</td>
                            <td>@booking["ownerNic"]</td>
                            <td>@bookingDateTime.ToString("yyyy-MM-dd")</td>
                            <td>@bookingDateTime.ToString("HH:mm")</td>
                            <td>
                                @if (status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else if (status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                <button type="button"
                                        class="btn btn-sm btn-success"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal"
                                        data-id="@booking["id"]"
                                        data-station="@booking["stationName"]"
                                        data-owner="@booking["ownerNic"]"
                                        data-date="@bookingDateTime.ToString("yyyy-MM-dd")"
                                        data-time="@bookingDateTime.ToString("HH:mm")"
                                        @(canModify ? "" : "disabled")>
                                    Update
                                </button>

                                <form asp-action="Cancel" method="post" class="d-inline">
                                    <input type="hidden" name="bookingId" value="@booking["id"]" />
                                    <button class="btn btn-sm btn-danger" @(canModify ? "" : "disabled")>
                                        Cancel
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- 🟪 EDIT BOOKING MODAL -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Update" method="post">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="editModalLabel">Edit Booking</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editBookingId" name="bookingId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Station</label>
                        <input type="text" id="editStation" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Owner NIC</label>
                        <input type="text" id="editOwnerNic" name="ownerNic" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input type="date" id="editDate" name="date" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Time</label>
                        <input type="time" id="editTime" name="time" class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const editModal = document.getElementById('editModal');
        editModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;

            document.getElementById('editBookingId').value = button.getAttribute('data-id');
            document.getElementById('editStation').value = button.getAttribute('data-station');
            document.getElementById('editOwnerNic').value = button.getAttribute('data-owner');
            document.getElementById('editDate').value = button.getAttribute('data-date');
            document.getElementById('editTime').value = button.getAttribute('data-time');
        });
    </script>
}
